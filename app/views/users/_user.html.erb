<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>

  <%if user.admin?%>
    <%= image_tag("rsz_star.png") %>
     | Admin
  <%else%>
     | User
  <%end%>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>

  <br>
  <a href="<%= points_user_path(user) %>">
      Points: <%= user.points %>
  </a>
  <br>
  Discussion Posts: <%= user.microposts.count %>
</li>
