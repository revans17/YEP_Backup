<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
        <br>
        <% if micropost.like == nil %>
             Likes: 0
        <% else %>
             Likes: <%= micropost.like %>
        <% end %>


    <%= image_tag micropost.picture.url if micropost.picture? %>

  </span>
  <!-- <% if current_user != micropost.user%>
  <%=link_to image_tag("like.png", alt: "YEP Logo"), upvote_micropost_url(micropost.id), id:"logo"%>
  <%end%> -->
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) || current_user.admin?%>
      <%= link_to "Delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
    <% if current_user != micropost.user%>
    <!-- <%=link_to image_tag("like.png", alt: "YEP Logo"), upvote_micropost_url(micropost.id), id:"logo"%> -->
         <%= link_to 'like', upvote_micropost_url(micropost.id), class: "btn--form--like" %>
    <%end%>

  </span>
</li>
